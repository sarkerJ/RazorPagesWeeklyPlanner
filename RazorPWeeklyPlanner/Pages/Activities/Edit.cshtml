@page "{id:int?}"
@model RazorPWeeklyPlanner.Pages.Activities.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Activity</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Activity.ActivityId" />
            <div class="form-group">
                <label asp-for="Activity.Name" class="control-label"></label>
                <input asp-for="Activity.Name" class="form-control" />
                <span asp-validation-for="Activity.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Activity.Content" class="control-label"></label>
                <input asp-for="Activity.Content" class="form-control" />
                <span asp-validation-for="Activity.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Activity.WeekDayId" class="control-label"></label>
                <select asp-for="Activity.WeekDayId" class="form-control" asp-items="ViewBag.WeekDayId"></select>
                <span asp-validation-for="Activity.WeekDayId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
