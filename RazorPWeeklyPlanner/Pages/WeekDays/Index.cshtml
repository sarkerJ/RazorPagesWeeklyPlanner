@page
@model RazorPWeeklyPlanner.Pages.WeekDays.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.WeekDay[0].Day)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.WeekDay) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Day)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.WeekDayId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.WeekDayId">Details</a> |
